{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "cc",
      "args": [
        "-Wall",
        "-Wextra",
        "-Werror",
        "-g",
        "*.c",
        "-o",
        "f"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}